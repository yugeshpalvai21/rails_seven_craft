<h1 class="text-4xl font-bold text-center mb-10 pt-10">Task Management</h1>

<div class="flex justify-center items-center min-h-screen">
  <div class="max-w-6xl w-full">
    <div id="task-list" data-controller="tasks" data-tasks-sort-url="<%= sort_tasks_path %>" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @tasks.each do |task| %>
        <div data-id="<%= task.id %>" class="task-item bg-white shadow-lg rounded-xl hover:shadow-2xl transform transition-transform duration-300 ease-in-out cursor-pointer overflow-hidden relative group">
          <!-- Task image covering the top 50% of the card -->
          <div class="relative h-32 overflow-hidden">
            <img src="<%= task.thumb_image %>" alt="<%= task.title %>" class="object-cover w-full h-full transition duration-500 transform group-hover:scale-105">
          </div>
          <!-- Task content -->
          <div class="p-6">
            <h2 class="text-lg font-bold mb-2 text-gray-800 group-hover:text-blue-600 transition duration-300"><%= task.title %></h2>
            <p class="text-gray-600">This is a brief description of the task. Add more details here to match the card design.</p>
          </div>
          <!-- Decorative border at the bottom of the card -->
          <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-blue-500 to-teal-400"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>


