<div class="container mx-auto mt-2">
  <div class="p-8">
    <!-- Auction details card -->
    <div class="bg-white shadow-md rounded-lg p-6 mb-6 mt-2">
      <h1 class="text-3xl font-bold mb-2"><%= @auction.title %></h1>
      <p class="text-gray-600 mb-4"><%= @auction.description %></p>
      <div class="flex justify-between items-center border-t pt-2">
        <span class="text-gray-500">Starting Price: $<%= @auction.starting_price %></span>
        <span class="font-semibold text-green-600">Current Bid: $<%= @auction.current_price %></span>
      </div>
    </div>

    <!-- Bids list card -->
    <div class="bg-white shadow-md rounded-lg p-6 mb-6 mt-2">
      <h2 class="text-2xl font-semibold mb-4">Bids</h2>
      <div>
        <% @auction.bids.each do |bid| %>
          <div class="py-2 border-b">
            <p class="text-lg">$<%= bid.amount %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Bid form card -->
    <div class="bg-white shadow-md rounded-lg p-6 mt-2">
      <h2 class="text-2xl font-semibold mb-4">Place a Bid</h2>
      <%= form_with(model: [@auction, @bid], local: true, class: "space-y-4") do |form| %>
        <%= form.number_field :amount, step: 0.01, class: "border rounded-lg w-full p-2" %>
        <%= form.submit "Place Bid", class: "bg-blue-500 text-white rounded-lg px-4 py-2" %>
      <% end %>
    </div>
  </div>
</div>
