<h1 class="text-2xl font-bold text-center my-6">New Auction</h1>

<div class="container mx-auto px-4 max-w-lg">
  <div class="bg-white shadow-md rounded-lg p-6">
    <%= form_with model: @auction, local: true, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :title, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :title, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= @auction.errors.full_messages_for(:title).join(", ") %>
      </div>

      <div>
        <%= f.label :description, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_area :description, rows: 4, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= @auction.errors.full_messages_for(:description).join(", ") %>
      </div>

      <div>
        <%= f.label :starting_price, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.number_field :starting_price, step: 0.01, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= @auction.errors.full_messages_for(:starting_price).join(", ") %>
      </div>

      <div>
        <%= f.label :current_price, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.number_field :current_price, step: 0.01, class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <%= @auction.errors.full_messages_for(:current_price).join(", ") %>
      </div>

      <div>
        <%= f.submit "Create Auction", class: "w-full bg-blue-500 text-white font-semibold py-2 rounded-md hover:bg-blue-600 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
